# Environment variables for the think tank website
# Copy this file to .env.local for local development
# Frontend-only configuration - no backend or database connection needed

# NextJS environment
NODE_ENV=development
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME="Future Shift Labs"

# Frontend configuration
NEXT_PUBLIC_CONTACT_EMAIL=example@yourdomain.com
NEXT_PUBLIC_GOOGLE_ANALYTICS=""

# Feature flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_NEWSLETTER=true 